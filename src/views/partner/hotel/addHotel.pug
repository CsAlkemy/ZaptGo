	script.
		window.onload = function () {
			var counter = 1;
			$(document).on('click', '#addMore', function () {
				let html = '<div class="col-md-6" id="feature' + counter + '">' +
					'<div class="form-group">' +
					'<label>Feature ' + counter + '</label>' +
					'<input class="form-control" name="feature[]" placeholder="e.g- Wifi" type="text">' +
					'</div>' +
					'</div>'
				$("#repeater").append(html);
				counter++;
			});
			$(document).on('click', '#reduce', function () {
				if (counter > 1) {
					counter--;
					$("#feature" + counter).remove();
				}
			});

			$('input[name="returnDate"], [name="bookStart"], [name="bookEnd"], [name="bookStart"], [name="departure"]').daterangepicker({
					singleDatePicker: true,
				}
			);

			$("#Area").selectize({
				plugins: ["clear_button"],
				dropdownParent: "body",
				placeholder: "Select Area",
				preload: true,
				sortField: 'text',
				valueField: 'id',
				labelField: 'name',
				searchField: 'name',
				load: function (query, callback) {
					$.ajax({
						dataType: "json",
						delay: 250,
						type: 'post',
						url: "!{('/partner/hotel/getArea')}",
						data: {term: query, categoryOnly: false, categoryID: $("#Area").val()},
						error: function (err) {
							console.log(err);
							callback();
						},
						success: function (res) {
							console.log(res);
							callback(res);
						}
					});
				}
			});
			$('#checkIn').timepicker({
				timeFormat: 'h:mm p',
				interval: 30,
				minTime: '1',
				maxTime: '6:00pm',
				defaultTime: '12',
				startTime: '8:30',
				dynamic: false,
				dropdown: true,
				scrollbar: true
			});

			$('#checkOut').timepicker({
				timeFormat: 'h:mm p',
				interval: 30,
				minTime: '1',
				maxTime: '6:00pm',
				defaultTime: '12',
				startTime: '8:30',
				dynamic: false,
				dropdown: true,
				scrollbar: true
			});

			document.getElementById("image").onchange = function () {
				let reader = new FileReader();
				reader.onload = function (e) {
					document.getElementById("preview").src = e.target.result;
				};
				reader.readAsDataURL(this.files[0]);
			};


		}