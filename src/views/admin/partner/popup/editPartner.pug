.modal-dialog.modal-lg(role="document")
	.modal-content
		.modal-header
			h4.modal-title Edit Expense
			button.close.closeModal(type="button" data-dismiss="modal" aria-label="Close")
				span(aria-hidden="true") Ã—
		.modal-body
			.panel.panel-body
				form.form-material("novalidate", method='post' action=makeUrl('/expense/editExpense/')+expense._id)
					.row.justify-content-center
						.col-9.mt-4
							.form-group
								label(for="dateTime") Date
								input#dateTime.form-control(type="text" name="date" required="")
						.col-9.mt-4
							.form-group
								label(for="amount") Amount
								input#amount.form-control(type="number" name="amount" value=expense.amount required="")
						.col-9.mt-4
							.form-group
								label(for="note") Note
								textarea#note.form-control(type="text" name="note" rows="5" required="") !{expense.note}
						.col-9
							.form-group.text-center
								button.btn.btn-themecolor.w-50(type="submit") Save

