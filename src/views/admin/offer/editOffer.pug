extends ../../layout/layout
block topRightContent
	.col-md-1
	.col-md-4
		a.btn.btn-outline-primary.ml-2.mr-2.rounded-0(href=makeUrl("/offer/offers")) Offers
		a.button.btn.btn-outline-primary.rounded-0(href=makeUrl("/offer/addOffer")) Add Offer
	.col
block content
	.container
		.row
			.col
			.col-md-10
				.card.card-no-border
					.card-header.bg-light
						h4.font-weight-light.text-center Edit Offers
					.card-body
						form("novalidate", method='post' action=makeUrl('/offer/editOffer/')+offer._id)
							.form-row
								.form-group.col-md-8
									label(for="offer") Offer name
									input#offer.form-control(type="text" name="offerName" value=offer.offerName  required )
								.form-group.col-md-4
									label(for="percentage") Percentage ( %)
									input#percentage.form-control(type="number" name="percentage" value=offer.percentage required )
							.form-row
								.form-group.col-md-12
									label(for="Promo") Promo Code
									input#Promo.form-control(type="text" name="code" value=offer.code required)
							.form-row
								.form-group.col-md-12
									label(for="dis") Description
									textarea#dis.form-control(type="text" name="description") !{offer.description}
							button.btn.btn-primary.rounded-0(type="submit") Submit
			.col

	script.
		window.onload = function () {

		}