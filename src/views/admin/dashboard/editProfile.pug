extends ../../layout/layout
block content
	.container.text-dark
		.row
			.col
			.card.col-md-6.shadow-1.rounded-0.mb-5
				.card-body
					h3.font-weight-light.text-center Edit Admin Details
					hr.mb-5
					form(action=makeUrl('/editProfile/')+adminData._id  method="POST" enctype="multipart/form-data")
						.form-group
							label(for="partnerName") Admin Name
							input#partnerName.form-control(type="text" name="name" value=adminData.name required)
						.row
							.form-group.col-md-6
								label(for="email") Email
								input#email.form-control(type="email" name="email" value=adminData.email required)
							.form-group.col-md-6
								label(for="phone") Phone
								input#phone.form-control(type="text" name="phone" value=adminData.phone required)
						.row.mt-5
							.col-md-6
								h5.font-weight-lighter.border-bottom.border-gray.pb-2 Add Image
								.form-group.pt-5.pb-5
									input#image.form-control-file(name="image" type="file")
							.col-md-6
								h5.font-weight-lighter.border-bottom.border-gray.pb-2 Image preview:
								img#preview.img-responsive.border-dark(alt="Image" height=150 src="/images/noimage.png")

						button.btn.btn-success.rounded-0.mt-4(type="submit") Submit


			.col
	script.
		window.onload = function () {
			document.getElementById("image").onchange = function () {
				let reader = new FileReader();
				reader.onload = function (e) {
					document.getElementById("preview").src = e.target.result;
				};
				reader.readAsDataURL(this.files[0]);
			};
		}