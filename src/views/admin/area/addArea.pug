extends ../../layout/layout
block topRightContent
	.container
		.row
			.col-md-1
			.col-md-2
				a.btn.btn-outline-primary.px-lg-5.rounded-0(href=makeUrl("/areas") ) Areas
			.col
block content
	.container.text-dark
		.row
			.col
			.col-md-10
				.card.card-no-border.mb-5
					.card-header.bg-light
						h3.font-weight-light.text-center.text-dark Add Area
					.card-body
						form(action=makeUrl = "/admin/addArea" enctype="multipart/form-data" method="POST" )
							.form-row
								.form-group.col-md-12
									label(for="area") Area Name
									input#area.form-control(type="text" name="name" required)
							.row.mt-4
								.col-md-6
									h5.font-weight-lighter.border-bottom.border-gray.pb-2 Add Cover image
									.form-group.pt-5.pb-5
										input#image.form-control-file(name="image" type="file" required)
								.col-md-6
									h5.font-weight-lighter.border-bottom.border-gray.pb-2 Image preview:
									img#preview.img-responsive.border-dark(alt="Image" height=150 src="/images/noimage.png")
								.col-md-12.pt-2
									button.btn.btn-primary.align-content-center.rounded-0(type="submit") Submit
			.col

	script.
		window.onload=function () {

			document.getElementById("image").onchange = function () {
				let reader = new FileReader();
				reader.onload = function (e) {
					document.getElementById("preview").src = e.target.result;
				};
				reader.readAsDataURL(this.files[0]);
			};
		}