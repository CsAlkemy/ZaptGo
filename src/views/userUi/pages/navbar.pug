mixin navbar
	.content
		nav.navbar.fixed-top.navbar-expand-lg.navbar-light.scrolling-navbar.white
			.container
				a.navbar-brand.font-weight-bold(href="/login")
					strong TOURGO
				button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent-4" aria-controls="navbarSupportedContent-4" aria-expanded="false" aria-label="Toggle navigation")
					span.navbar-toggler-icon
				#navbarSupportedContent-4.collapse.navbar-collapse
					ul.navbar-nav.ml-auto
						li.nav-item.ml-3
							a.nav-link.waves-effect.waves-light.dark-grey-text.font-weight-bold(href="/user/hotel/hotels")
								| Hotels
						li.nav-item.ml-3
							a.nav-link.waves-effect.waves-light.dark-grey-text.font-weight-bold(href="/user/package/packages")
								| Packages
						//li.nav-item.ml-3
						//	a.nav-link.waves-effect.waves-light.dark-grey-text.font-weight-bold(href="/user/blog")
						//		| Blog
						li.nav-item.ml-3
							a.nav-link.waves-effect.waves-light.dark-grey-text.font-weight-bold(href="/user/contact")
								|  Contact
						li.nav-item.dropdown.ml-3
							a#navbarDropdownMenuLink-4.nav-link.dropdown-toggle.waves-effect.waves-light.dark-grey-text.font-weight-bold(data-toggle="dropdown" aria-haspopup="true" aria-expanded="false")
								| !{__session.user.firstName+" "+__session.user.lastName}
							.dropdown-menu.dropdown-menu-right.dropdown-cyan(aria-labelledby="navbarDropdownMenuLink-4")
								a.dropdown-item.waves-effect.waves-light(href="/user/hotelbookings") Hotel Bookings
								a.dropdown-item.waves-effect.waves-light(href="/user/packagebookings") Package Bookings
								a.dropdown-item.waves-effect.waves-light(href="/logout") Log out
		block content

	a.fb-message-blue(href="https://www.messenger.com/t/108802907274147/" style=" right: 40px;" target="_blank")
		i.fab.fa-facebook-messenger.ml-1
		|   Message Us


